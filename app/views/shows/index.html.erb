<% if user_signed_in? %>

  <h1>Shows</h1>

  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th scope="col">id</th>
        <th scope="col">Name </th>
        <th scope="col">Description</th>
        <th scope="col">Priority</th>
                       
      </tr>
    </thead>
    <tbody class="table-group-divider">

      <% @shows.each do |show| %>

        <% if show.user == current_user %>
          <tr>
          
            <th scope="row"> 
              <%= show.id %>
            </th>
            <td>
              <%= link_to show.name, show %>
              
            </td>
            <td>
              <%=show.description%>
            </td>         
            <td>
              <%=show.priority%>
            </td>

          </tr>
        <% end %>
        

      <% end %>
    </tbody>
  </table>

<% else %>

  <h1> Hello World!</h1>
  <h4> This is my first web application)</h4>

<% end %>